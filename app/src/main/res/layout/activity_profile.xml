<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/profile_profile_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:contentDescription="@null"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/profile_name_label"
            android:text="@string/text_name"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_profile_image"
            app:layout_constraintRight_toLeftOf="@id/profile_name_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            style="@style/AppTheme.ProfileTextViewStyle"/>

        <TextView
            android:id="@+id/profile_name_textview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintLeft_toRightOf="@id/profile_name_label"
            app:layout_constraintTop_toBottomOf="@id/profile_profile_image"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="James"
            style="@style/AppTheme.ProfileTextViewStyle"/>

        <TextView
            android:id="@+id/profile_age_label"
            android:text="@string/text_age"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_name_label"
            app:layout_constraintRight_toLeftOf="@id/profile_age_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            style="@style/AppTheme.ProfileTextViewStyle"/>

        <TextView
            android:id="@+id/profile_age_textview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@id/profile_age_label"
            app:layout_constraintTop_toBottomOf="@id/profile_name_textview"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="23"
            style="@style/AppTheme.ProfileTextViewStyle"/>

        <TextView
            android:id="@+id/profile_gender_label"
            android:text="@string/text_gender"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_age_label"
            app:layout_constraintRight_toLeftOf="@id/profile_gender_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            style="@style/AppTheme.ProfileTextViewStyle"/>

        <TextView
            android:id="@+id/profile_gender_textview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@id/profile_gender_label"
            app:layout_constraintTop_toBottomOf="@id/profile_age_textview"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Male"
            style="@style/AppTheme.ProfileTextViewStyle"/>

        <TextView
            android:id="@+id/profile_hobbies_label"
            android:text="@string/text_hobbies"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_gender_label"
            app:layout_constraintRight_toLeftOf="@id/profile_hobbies_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            style="@style/AppTheme.ProfileTextViewStyle"/>

        <TextView
            android:id="@+id/profile_hobbies_textview"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            app:layout_constraintLeft_toRightOf="@id/profile_hobbies_label"
            app:layout_constraintTop_toBottomOf="@id/profile_gender_label"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="Soccer, tennis, golf"
            style="@style/AppTheme.ProfileTextViewStyle"/>


    </android.support.constraint.ConstraintLayout>
</layout>